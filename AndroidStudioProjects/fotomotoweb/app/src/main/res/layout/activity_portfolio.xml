<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".activity_portfolio"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="#EEEEEE"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="PORTOFOLIO"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Pre-Wedding"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"/>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider1"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_slider"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="1000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Wedding"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"/>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider2"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_slider"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="1000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Event Photoshoot"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"/>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider3"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_slider"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="1000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Model Photo Session"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"/>

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/slider4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_slider"
                app:iss_auto_cycle="true"
                app:iss_delay="0"
                app:iss_period="1000" />

        </LinearLayout>
    </ScrollView>




</LinearLayout>